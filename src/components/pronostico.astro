</script>



<section id="team" class="team section-bg" data-aos="zoom-in-up"  data-aos-delay="700" >
    <div class="container-fluid">
        <div class="section-title" >
            <h2>Pronostico<strong> Del clima </strong></h2>
            <p></p>
          </div>
          <swiper-container class="mySwiper" id="mySwiper2" navigation="true" autoplay-delay="3500" autoplay-disable-on-interaction="false" slides-per-view="2" space-between="30">
            <swiper-slide>
                <img class="img-fluid" src={`${url}/assets/${pronostico.imagen1}`} alt="">
