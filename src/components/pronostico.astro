---
import directus from "../lib/directus";
import { readSingleton } from "@directus/sdk";

const url = 'https://data.copeco.gob.hn';
const pronostico = await directus.request(readSingleton("pronostico"));
---
<!-- src={`${url}/assets/${pronostico.imagen1}`} -->
<style>
   .img-fluid{
    width: 100%;
   } 
   .member {
   padding: auto;
