            <swiper-slide>
                 <img class="img-fluid" src={`${url}/assets/${pronostico.imagen2}`} alt="">
            </swiper-slide>
            <swiper-slide>
                <img class="img-fluid" src={`${url}/assets/${pronostico.imagen3}`} alt="">
            </swiper-slide>
            <swiper-slide>
                <img class="img-fluid" src={`${url}/assets/${pronostico.imagen4}`} alt="">
            </swiper-slide>
          </swiper-container>
          <br>
          <div class="container-fluid">
            <div class="container-fluid" set:html={pronostico.video}>
    </div>
</section>


            
                

               
                     
                  
    
  


