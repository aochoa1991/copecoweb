---

import BaseLayout from "../layouts/BaseLayout.astro";

import directus from "../lib/directus";
import { readSingleton } from "@directus/sdk";

const dcgen = await directus.request(readSingleton("DCGNE"));
const url = "https://data.copeco.gob.hn/assets/";
---

<style>

.img-mision {
  width: 300px;
  height: 300px;
}

.programas{
  border: 10px;
  margin: 10px;
}

.list-group-item {
  padding: 10px;
}


</style>



<script
  src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"
></script>

<script>



</script>



<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
  crossorigin="anonymous"
/>
<BaseLayout>
  <main class="main">
    <section id="team" class="team section-bg" data-aos="fade-up"
    data-aos-delay="300">
      <div class="container text-center">
        <img class="img-fluid" src=`${url}${dcgen.logo}` alt="" />
        <section id="about" class="about section">
          <div class="container text-center">
            <div class="row">
              <div class="col">
                <div class="card shadow-lg rounded-4" data-aos="fade-right">
                  <img class="card-img-top" src=`${url}${dcgen.carouseldcge1}` alt="">
                  <div class="card-header">
                    <h3>Mision</h3>
                  </div>
                  <div class="card-body">
                    <p class="card-text">{dcgen.Mision}</p>
                  </div>
                </div>
              </div>
              <div class="col">
                <div class="card shadow-lg rounded-4" data-aos="fade-left">
                  <img class="card-img-top" src=`${url}${dcgen.carouseldcge2}` alt="">
                  <div class="card-header">
                    <h3>Vision</h3>
                  </div>
                  <div class="card-body">
                    <p class="card-text">{dcgen.Vision}</p>
                  </div>
                </div>
              
              </div>
              
            </div>
            </div>
           </div>
          </div>
        </section><!-- /About Section -->
      </div>
     
      <section id="team" class="team section-bg" data-aos="fade-up">
        <div class="container">
          <div class="row dropdown">
            <div class="col ">
              <div class="container shadow-lg rounded-4">
                <h2 class="text-center">PROGRAMAS</h2>
              </div>
            </div>
            
            
            <div class="col-md-6">
              <div class="collapse multi-collapse" id="multiCollapseExample1"></div>
              <div class="container shadow-lg rounded-4">
                <div class="list-group">
                  <button class="btn ">
                    <a href="/usar">PROGRAMA USAR</a>
                    </button>
                    <button class="btn">
                      <a href="/enconstruccion">PROGRAMA BRIGADA FORESTAL</a>
                      </button>
                      <button class="btn ">
                        <a href="/enconstruccion">PROGRAMA RESCATE ACUATICO</a>
                        </button>
                        <button class="btn ">
                          <a href="/enconstruccion">PROGRAMA NRBQ</a>
                          </button>
                </div>
              </div>
              
                
              </div>
              
            </div>
          </div>
        </div>
      </section>
     

      
    </section>

    
  </main>

  <script
    src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"
  ></script>
  <script is:inline src="/js/main.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous"></script>
</BaseLayout>
