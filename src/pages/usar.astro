---
import BaseLayout from "../layouts/BaseLayout.astro";
import directus from "../lib/directus";
import { readSingleton } from "@directus/sdk";

const dcgen = await directus.request(readSingleton("DCGNE"));
const url = "https://data.copeco.gob.hn/assets/";
---

<style>
  .col {
    margin-right: 20px;
  }
  .usar {
    padding-top: 60px;
  }
</style>

<BaseLayout>
  <section id="about" class="about section">

    <div class="container">

      <div class="row gy-4">

        <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="100">
          <p class="who-we-are">USAR</p>
          <h3>Que es el programa USAR HONDURAS</h3>
          <p class="fst-italic">
            {dcgen.usar_definicion}
          </p>
